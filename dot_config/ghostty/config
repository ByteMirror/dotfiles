# TERMINAL APPEARANCE
theme = dark:Afterglow,light:belafonte-day-custom

# WINDOW SETTINGS
# macos-titlebar-style = hidden

# Font configuration
font-family = "MonoLisaFabian Nerd Font"
font-size = 14

# Make Option key work as Alt/Meta modifier for keybindings
# instead of sending special characters
macos-option-as-alt = true

# Quick Terminal (dropdown) with Hyper+T
keybind = global:ctrl+shift+alt+cmd+t=toggle_quick_terminal
quick-terminal-animation-duration = 0.1

# Split Management with Hyperkey
# Create splits
keybind = ctrl+shift+alt+cmd+r=new_split:right
keybind = ctrl+shift+alt+cmd+l=new_split:left
keybind = ctrl+shift+alt+cmd+d=new_split:down
keybind = ctrl+shift+alt+cmd+u=new_split:up

# Navigate between splits (arrow keys)
keybind = ctrl+shift+alt+cmd+left=goto_split:left
keybind = ctrl+shift+alt+cmd+right=goto_split:right
keybind = ctrl+shift+alt+cmd+up=goto_split:up
keybind = ctrl+shift+alt+cmd+down=goto_split:down

# Equalize splits
keybind = ctrl+shift+alt+cmd+equal=equalize_splits

# KEYBINDINGS
keybind = cmd+shift+v=new_split:right


keybind = shift+enter=text:\n
