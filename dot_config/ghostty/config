# TERMINAL APPEARANCE
theme = dark:Afterglow,light:belafonte-day-custom

# WINDOW SETTINGS

# Font configuration
font-family = "MonoLisaFabian Nerd Font"
font-size = 12

# Hyperkey modifier (cmd on macOS, super on Linux via keyd)

# Quick Terminal (dropdown) with Hyper+T
keybind = global:ctrl+shift+alt+super+t=toggle_quick_terminal
quick-terminal-animation-duration = 0.1

# Split Management with Hyperkey
# Create splits
keybind = ctrl+shift+alt+super+r=new_split:right
keybind = ctrl+shift+alt+super+l=new_split:left
keybind = ctrl+shift+alt+super+d=new_split:down
keybind = ctrl+shift+alt+super+u=new_split:up

# Navigate between splits (arrow keys)
keybind = ctrl+shift+alt+super+left=goto_split:left
keybind = ctrl+shift+alt+super+right=goto_split:right
keybind = ctrl+shift+alt+super+up=goto_split:up
keybind = ctrl+shift+alt+super+down=goto_split:down

# Equalize splits
keybind = ctrl+shift+alt+super+equal=equalize_splits

# Close current split
keybind = super+w=close_surface

# KEYBINDINGS
keybind = super+shift+v=new_split:right

keybind = shift+enter=text:\n

# Shell
command = /usr/bin/zsh

# Titlebar on Linux
gtk-titlebar-style = tabs

