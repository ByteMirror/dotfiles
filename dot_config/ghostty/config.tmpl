# TERMINAL APPEARANCE
theme = dark:Afterglow,light:belafonte-day-custom

# WINDOW SETTINGS
{{- if eq .chezmoi.os "darwin" }}
# macos-titlebar-style = hidden
{{- end }}

# Font configuration
font-family = "MonoLisaFabian Nerd Font"
font-size = 14

{{- if eq .chezmoi.os "darwin" }}

# Make Option key work as Alt/Meta modifier for keybindings
# instead of sending special characters
macos-option-as-alt = true
{{- end }}

# Hyperkey modifier (cmd on macOS, super on Linux via keyd)
{{- $hyper := "ctrl+shift+alt+cmd" }}
{{- if eq .chezmoi.os "linux" }}
{{- $hyper = "ctrl+shift+alt+super" }}
{{- end }}

# Quick Terminal (dropdown) with Hyper+T
keybind = global:{{ $hyper }}+t=toggle_quick_terminal
quick-terminal-animation-duration = 0.1

# Split Management with Hyperkey
# Create splits
keybind = {{ $hyper }}+r=new_split:right
keybind = {{ $hyper }}+l=new_split:left
keybind = {{ $hyper }}+d=new_split:down
keybind = {{ $hyper }}+u=new_split:up

# Navigate between splits (arrow keys)
keybind = {{ $hyper }}+left=goto_split:left
keybind = {{ $hyper }}+right=goto_split:right
keybind = {{ $hyper }}+up=goto_split:up
keybind = {{ $hyper }}+down=goto_split:down

# Equalize splits
keybind = {{ $hyper }}+equal=equalize_splits

# KEYBINDINGS
{{- if eq .chezmoi.os "darwin" }}
keybind = cmd+shift+v=new_split:right
{{- else }}
keybind = super+shift+v=new_split:right
{{- end }}

keybind = shift+enter=text:\n

# Shell
command = /usr/bin/zsh
